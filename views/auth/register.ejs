<%- contentFor('HeaderCss') %>

    <style>
      .radio-box {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 2px solid #ddd;
        padding: 15px;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        background-color: #fff;
      }

      .radio-box:hover,
      .radio-box.active {
        border-color: #28a745;
        background-color: #f8f9fa;
      }
  
      .radio-box input {
        display: none;
        /* Hide default radio button */
      }

      .radio-box i {
        font-size: 24px;
        color: #28a745;
      }
    </style>



