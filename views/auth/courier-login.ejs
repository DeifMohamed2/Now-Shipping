<%- contentFor('HeaderCss') %>
<%-include("../partials/title-meta", { "title" : "Login" }) %>
<%- contentFor('body') %>
<div class="auth-page-wrapper pt-5">
  <!-- auth page bg -->
  <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
    <div class="bg-overlay"></div>

    <div class="shape">
      <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
        <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
      </svg>
    </div>
  </div>

  <!-- auth page content -->
  <div class="auth-page-content">
    <div class="container">
    
      <!-- end row -->

      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card mt-4" style="border-radius: 30px; box-shadow:0 10px 11px 12px rgba(0, 0, 0, 0.1);">

            <div class="card-body p-4">
              <div class="text-center mt-2">
              <h5 class="text-primary">Courier Sign In</h5>
              <p class="text-muted">Sign in to continue to Now Shipping.</p>
              </div>
              <div class="p-2 mt-4">
               <% if(message.length> 0) { %>
                <div class="alert alert-success text-center mb-4 flash" role="alert">
                <%= message %>
                </div>
                <% } %>
                <% if(error.length> 0) { %>
                <div class="alert alert-danger text-center mb-4 flash" role="alert">
                <%= error %>
                </div>
                <% } %>
                <form id="loginForm" method="post">

                <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="text" class="form-control" id="Email" name="email" value="" placeholder="Enter Email">
                </div>

                <div class="mb-3">
           
                <label class="form-label" for="password-input">Password</label>
                <div class="position-relative auth-pass-inputgroup mb-3">
                  <input type="password" class="form-control pe-5 password-input" name="password" required minlength="8" value=""  placeholder="Enter password" id="password-input">
                  <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                </div>
                </div>

                

                <div class="mt-4">
                <button class="btn btn-success w-100" type="submit">Sign In</button>
                </div>

                <div class="mt-4 text-center">
                    <div class="alert alert-danger" style="display: none;" id="errorMessage" role="alert">
                   
                    </div>
                </div>
              </form>
              </div>
            </div>
            <!-- end card body -->
            </div>

        </div>
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </div>
  <!-- end auth page content -->

 
</div>
<!-- end auth-page-wrapper -->
<%- contentFor('FooterJs') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="/assets/rJS/login-courier.js"></script>
