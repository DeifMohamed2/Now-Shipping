  <!-- Tracking Widget -->
  <section class="tracking-widget">
    <div class="container">
      <div class="tracking-container">
        <div class="tracking-tabs">
          <button class="tracking-tab active" data-tab="track">
            <i class="fas fa-search"></i> Track
          </button>
          <button class="tracking-tab" data-tab="quote">
            <i class="fas fa-calculator"></i> Quote
          </button>
          <button class="tracking-tab" data-tab="locations">
            <i class="fas fa-map-marker-alt"></i> Locations
          </button>
        </div>
        <div class="tracking-content">
          <div class="tracking-panel active" id="track-panel">
            <h3>Track Your Shipment</h3>
            <form class="tracking-form">
              <div class="form-group">
                <input type="text" placeholder="Enter tracking number" required>
                <button type="submit" class="btn btn-primary">Track Now</button>
              </div>
              <div class="tracking-options">
                <span>Track by:</span>
                <a href="#">Reference Number</a>
                <a href="#">Order ID</a>
                <a href="#">Email/Phone</a>
              </div>
            </form>
          </div>
          <div class="tracking-panel" id="quote-panel">
            <h3>Get a Quick Quote</h3>
            <form class="quote-form">
              <div class="form-row">
                <div class="form-group">
                  <label for="from">From</label>
                  <input type="text" id="from" placeholder="City or ZIP code" required>
                </div>
                <div class="form-group">
                  <label for="to">To</label>
                  <input type="text" id="to" placeholder="City or ZIP code" required>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <label for="weight">Weight</label>
                  <div class="input-with-select">
                    <input type="number" id="weight" placeholder="Weight" required>
                    <select id="weight-unit">
                      <option value="kg">kg</option>
                      <option value="lb">lb</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="service-type">Service</label>
                  <select id="service-type">
                    <option value="standard">Standard</option>
                    <option value="express">Express</option>
                    <option value="priority">Priority</option>
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Calculate</button>
            </form>
          </div>
          <div class="tracking-panel" id="locations-panel">
            <h3>Find Nearby Locations</h3>
            <form class="locations-form">
              <div class="form-group">
                <input type="text" placeholder="Enter ZIP code or city" required>
                <button type="submit" class="btn btn-primary">Search</button>
              </div>
              <div class="location-options">
                <label class="checkbox">
                  <input type="checkbox" checked>
                  <span>Drop-off Points</span>
                </label>
                <label class="checkbox">
                  <input type="checkbox" checked>
                  <span>Service Centers</span>
                </label>
                <label class="checkbox">
                  <input type="checkbox" checked>
                  <span>Lockers</span>
                </label>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
