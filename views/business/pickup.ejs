    html: 'Please wait while we prepare your pickups export.',
    allowOutsideClick: false,
    didOpen: () => {
      Swal.showLoading();
    }
  });

  // Export ALL pickups (no filters)
  const exportUrl = `/business/export-pickups`;
  const link = document.createElement('a');
  link.href = exportUrl;
  link.download = `pickups_${new Date().toISOString().split('T')[0]}.xlsx`;
  document.body.appendChild(link);
  link.click();
  document.body.removeChild(link);

  // Close loading indicator after a short delay
  setTimeout(() => {
    Swal.close();
    Swal.fire({
      icon: 'success',
      title: 'Export Started!',
      text: 'Your pickups export has been downloaded.',
      confirmButtonColor: '#0d6efd',
      timer: 2000
    });
  }, 500);
}

