<%- contentFor('HeaderCss') %>
<link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/assets/rCSS/tickets-new.css">

<%- contentFor('body') %>
<div>
  <div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h3 class="fw-bold mb-1" style="color: #2A3950;">
              <i class="ri-customer-service-2-line me-2" style="color: #fdb614;"></i>Support Tickets
            </h3>
            <p class="text-muted mb-0">Get help from our support team</p>
          </div>
          <button class="btn btn-primary" id="createTicketBtn">
            <i class="ri-add-line me-1"></i> New Ticket
          </button>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Ticket List Sidebar -->
      <div class="col-lg-4">
        <div class="card shadow-lg border-0 h-100">
          <div class="card-header text-white border-0" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
            <div class="d-flex align-items-center justify-content-between">
              <h5 class="mb-0 fw-bold">
                <i class="ri-ticket-2-line me-2"></i>My Tickets
              </h5>
              <span class="badge bg-white text-dark" id="ticketCount">0</span>
            </div>
          </div>
          <div class="card-body p-0 d-flex flex-column" style="height: calc(100vh - 250px);">
            <!-- Enhanced Filters -->
            <div class="p-3 border-bottom bg-light">
              <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                  <i class="ri-search-line text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchTickets" placeholder="Search tickets...">
              </div>
              <div class="row g-2 mb-2">
                <div class="col-6">
                  <label class="form-label small fw-semibold mb-1">Priority</label>
                  <select class="form-select form-select-sm" id="filterPriority">
                    <option value="all">All Priorities</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="urgent">Urgent</option>
                  </select>
                </div>
                <div class="col-6">
                  <label class="form-label small fw-semibold mb-1">Type</label>
                  <select class="form-select form-select-sm" id="filterType">
                    <option value="all">All Types</option>
                    <option value="order_issue">Order Issue</option>
                    <option value="delivery_issue">Delivery Issue</option>
                    <option value="payment_issue">Payment Issue</option>
                    <option value="return_request">Return Request</option>
                    <option value="technical_support">Technical Support</option>
                    <option value="general_inquiry">General Inquiry</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </div>
            <!-- Status Filter Tabs -->
            <div class="btn-group w-100 p-2 bg-light border-bottom" role="group">
              <button type="button" class="btn btn-sm btn-outline-primary active filter-tab" data-status="all">
                <i class="ri-list-check me-1"></i>All
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="new">
                <i class="ri-add-circle-line me-1"></i>New
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="open">
                <i class="ri-mail-open-line me-1"></i>Open
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="pending">
                <i class="ri-time-line me-1"></i>Pending
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="resolved">
                <i class="ri-check-line me-1"></i>Resolved
              </button>
            </div>
            <!-- Ticket List -->
            <div id="ticketList" class="flex-grow-1 overflow-auto" style="max-height: 100%;"></div>
          </div>
        </div>
      </div>

      <!-- Chat Container -->
      <div class="col-lg-8">
        <div class="card shadow-lg border-0 h-100" style="height: calc(100vh - 250px);">
          <!-- Empty State -->
          <div id="emptyState" class="h-100 d-flex flex-column align-items-center justify-content-center p-5">
            <div class="empty-state-icon mb-4">
              <i class="ri-message-3-line"></i>
            </div>
            <h4 class="fw-bold mb-2" style="color: #2A3950;">No Ticket Selected</h4>
            <p class="text-muted text-center">Select a ticket to view conversation or create a new one</p>
          </div>

          <!-- Chat Container -->
          <div id="chatContainer" class="h-100 d-flex flex-column hidden">
            <!-- Enhanced Chat Header -->
            <div class="card-header border-0 text-white" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
              <div class="d-flex justify-content-between align-items-start">
                <div class="flex-grow-1">
                  <h5 id="chatTitle" class="mb-2 fw-bold">Ticket #...</h5>
                  <div id="chatInfo" class="small"></div>
                </div>
                <div class="d-flex gap-2 align-items-start">
                  <button class="btn btn-sm btn-light" id="rateTicketBtn" title="Rate Ticket">
                    <i class="ri-star-line me-1"></i>Rate
                  </button>
                </div>
              </div>
            </div>
            
            <!-- Messages Area -->
            <div id="chatMessages" class="flex-grow-1 overflow-auto p-4"></div>
            
            <!-- Message Input Area -->
            <div class="card-footer border-0 bg-white">
              <div id="attachmentPreview" class="mb-2"></div>
              <div class="input-group">
                <button class="btn btn-outline-secondary" type="button" id="attachImageBtn" title="Attach Image">
                  <i class="ri-image-add-line"></i>
                </button>
                <input type="file" id="imageInput" accept="image/*" style="display: none;">
                <textarea id="messageInput" class="form-control" placeholder="Type your message..." rows="2"></textarea>
                <button class="btn btn-primary px-4" id="sendBtn">
                  <i class="ri-send-plane-fill"></i> Send
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Enhanced Create Ticket Modal -->
<div class="modal fade" id="createTicketModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header text-white" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
        <h5 class="modal-title fw-bold">
          <i class="ri-add-circle-line me-2"></i>Create New Ticket
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-4">
        <form id="createTicketForm">
          <div class="mb-3">
            <label class="form-label fw-semibold">
              Subject <span class="text-danger">*</span>
            </label>
            <input type="text" class="form-control" id="ticketSubject" placeholder="Brief description of your issue..." required>
            <small class="text-muted">Be specific and concise</small>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold">
                Type <span class="text-danger">*</span>
              </label>
              <select class="form-select" id="ticketType" required>
                <option value="">Select ticket type...</option>
                <option value="order_issue">
                  <i class="ri-shopping-bag-line"></i> Order Issue
                </option>
                <option value="delivery_issue">Delivery Issue</option>
                <option value="payment_issue">Payment Issue</option>
                <option value="return_request">Return Request</option>
                <option value="technical_support">Technical Support</option>
                <option value="general_inquiry">General Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-semibold">Priority</label>
              <select class="form-select" id="ticketPriority">
                <option value="low">Low - Not urgent</option>
                <option value="medium" selected>Medium - Normal priority</option>
                <option value="high">High - Important</option>
                <option value="urgent">Urgent - Requires immediate attention</option>
              </select>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">Related Order (Optional)</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="ri-shopping-bag-line"></i>
              </span>
              <input type="text" class="form-control" id="relatedOrder" placeholder="Enter order number...">
            </div>
            <small class="text-muted">If this ticket is related to a specific order</small>
          </div>
          <div class="mb-3">
            <label class="form-label fw-semibold">
              Description <span class="text-danger">*</span>
            </label>
            <textarea class="form-control" id="ticketDescription" rows="6" placeholder="Please provide detailed information about your issue..." required></textarea>
            <small class="text-muted">Include all relevant details to help us assist you better</small>
          </div>
        </form>
      </div>
      <div class="modal-footer border-top">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="ri-close-line me-1"></i>Cancel
        </button>
        <button type="button" class="btn btn-primary" id="submitTicketBtn">
          <i class="ri-send-plane-fill me-1"></i>Create Ticket
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Rate Ticket Modal -->
<div class="modal fade" id="rateTicketModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-white" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
        <h5 class="modal-title fw-bold">
          <i class="ri-star-line me-2"></i>Rate Support Experience
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-4">
        <div class="text-center mb-4">
          <div class="rating-stars mb-3" id="ratingStars">
            <i class="ri-star-line star" data-rating="1"></i>
            <i class="ri-star-line star" data-rating="2"></i>
            <i class="ri-star-line star" data-rating="3"></i>
            <i class="ri-star-line star" data-rating="4"></i>
            <i class="ri-star-line star" data-rating="5"></i>
          </div>
          <p class="text-muted" id="ratingText">Click to rate</p>
        </div>
        <div class="mb-3">
          <label class="form-label fw-semibold">Comments (Optional)</label>
          <textarea class="form-control" id="ratingComment" rows="3" placeholder="Tell us about your experience..."></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="submitRatingBtn">Submit Rating</button>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<script src="/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/rJS/tickets-business.js"></script>