<%- contentFor('HeaderCss') %>
<link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/assets/rCSS/tickets-new.css">

<%- contentFor('body') %>
<div >
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h4 class="fw-bold mb-1">Support Tickets</h4>
            <p class="text-muted mb-0">Get help from our support team</p>
          </div>
          <button class="btn btn-primary" id="createTicketBtn">
            <i class="ri-add-line me-1"></i> New Ticket
          </button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-lg border-0">
          <div class="card-header text-white border-0" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
            <h5 class="mb-0 fw-bold">
              <i class="ri-ticket-2-line me-2"></i>My Tickets
            </h5>
          </div>
          <div class="card-body p-0">
            <div class="p-3 border-bottom bg-light">
              <div class="input-group mb-2">
                <span class="input-group-text bg-white border-end-0">
                  <i class="ri-search-line text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchTickets" placeholder="Search tickets...">
              </div>
              <div class="row g-2">
                <div class="col-6">
                  <select class="form-select form-select-sm" id="filterPriority">
                    <option value="all">All Priorities</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="urgent">Urgent</option>
                  </select>
                </div>
                <div class="col-6">
                  <select class="form-select form-select-sm" id="filterType">
                    <option value="all">All Types</option>
                    <option value="order_issue">Order Issue</option>
                    <option value="delivery_issue">Delivery Issue</option>
                    <option value="payment_issue">Payment Issue</option>
                    <option value="return_request">Return Request</option>
                    <option value="technical_support">Technical Support</option>
                    <option value="general_inquiry">General Inquiry</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="btn-group w-100 p-2 bg-light" role="group">
              <button type="button" class="btn btn-sm btn-outline-primary active filter-tab" data-status="all">All</button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="new">New</button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="open">Open</button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="pending">Pending</button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="resolved">Resolved</button>
            </div>
            <div id="ticketList" style="max-height: 550px; overflow-y: auto;"></div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card shadow-lg" style="height: 600px;">
          <!-- Empty State -->
          <div id="emptyState" class="h-100 d-flex flex-column align-items-center justify-content-center">
            <i class="ri-message-3-line display-1 mb-4"></i>
            <h5 class="fw-bold mb-2">No Ticket Selected</h5>
            <p class="text-muted">Select a ticket to view conversation</p>
          </div>

          <!-- Chat Container -->
          <div id="chatContainer" class="h-100 flex-column hidden">
            <div class="card-header border-0">
              <h5 id="chatTitle" class="mb-1">Ticket #...</h5>
              <div id="chatInfo" class="text-muted small"></div>
            </div>
            <div id="chatMessages" class="flex-grow-1 overflow-auto p-3"></div>
            <div class="card-footer border-0 bg-white">
              <div id="attachmentPreview" class="mb-2"></div>
              <div class="input-group">
                <button class="btn btn-outline-secondary" type="button" id="attachImageBtn" title="Attach Image">
                  <i class="ri-image-add-line"></i>
                </button>
                <input type="file" id="imageInput" accept="image/*" style="display: none;">
                <textarea id="messageInput" class="form-control" placeholder="Type your message..." rows="2"></textarea>
                <button class="btn btn-primary px-4" id="sendBtn">
                  <i class="ri-send-plane-fill"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Create Ticket Modal -->
<div class="modal fade" id="createTicketModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create New Ticket</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="createTicketForm">
          <div class="mb-3">
            <label class="form-label">Subject *</label>
            <input type="text" class="form-control" id="ticketSubject" required>
          </div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Type *</label>
              <select class="form-select" id="ticketType" required>
                <option value="">Select...</option>
                <option value="order_issue">Order Issue</option>
                <option value="delivery_issue">Delivery Issue</option>
                <option value="payment_issue">Payment Issue</option>
                <option value="return_request">Return Request</option>
                <option value="technical_support">Technical Support</option>
                <option value="general_inquiry">General Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Priority</label>
              <select class="form-select" id="ticketPriority">
                <option value="low">Low</option>
                <option value="medium" selected>Medium</option>
                <option value="high">High</option>
                <option value="urgent">Urgent</option>
              </select>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Related Order (Optional)</label>
            <input type="text" class="form-control" id="relatedOrder" placeholder="Order number...">
          </div>
          <div class="mb-3">
            <label class="form-label">Description *</label>
            <textarea class="form-control" id="ticketDescription" rows="5" required></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="submitTicketBtn">Create Ticket</button>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<script src="/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/rJS/tickets-business.js"></script>