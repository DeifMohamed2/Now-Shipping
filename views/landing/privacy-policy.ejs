    height: 60px;
    width: auto;
    object-fit: contain;
    transition: all 0.3s ease;
  }

  header.scrolled .logo img {
    height: 50px;
  }

  /* Navigation */
  .nav-container {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  nav {
    margin-right: 1rem;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
  }

  nav ul li {
    position: relative;
  }

  nav ul li a {
    text-decoration: none;
    color: var(--dark);
    font-weight: 600;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: var(--border-radius);
    transition: all 0.3s ease;
    position: relative;
  }

  nav ul li a::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background-color: var(--primary);
    transition: width 0.3s ease;
    border-radius: 3px 3px 0 0;
  }

  nav ul li a:hover::before,
  nav ul li.active a::before {
    width: 70%;
  }

  nav ul li a i {
    font-size: 1.1rem;
    color: var(--primary);
    transition: transform 0.3s ease;
  }

  nav ul li a:hover i {
    transform: translateY(-3px);
  }

  nav ul li a:hover {
    color: var(--primary);
    background-color: rgba(243, 151, 32, 0.05);
  }

  nav ul li.active a {
    color: var(--primary);
    background-color: rgba(243, 151, 32, 0.08);
    font-weight: 700;
  }

