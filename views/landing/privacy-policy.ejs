    .mobile-menu-btn {
      display: flex;
    }

    .nav-container {
      position: fixed;
      top: 0;
      right: -100%;
      width: 80%;
      height: 100vh;
      background-color: white;
      flex-direction: column;
      padding: 5rem 2rem 2rem;
      box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
