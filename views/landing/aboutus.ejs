    overflow: hidden;
    margin-bottom: 1rem;
    border: 5px solid var(--primary);
    box-shadow: 0 10px 20px rgba(243, 151, 32, 0.3);
  }

  .author-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-name {
    font-size: 1.25rem;
    font-weight: bold;
    color: var(--dark);
    margin-bottom: 0.3rem;
  }

  .author-position {
    color: var(--primary);
    font-weight: 500;
  }

  .testimonial-nav {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
    gap: 0.75rem;
