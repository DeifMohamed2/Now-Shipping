<!-- JavaScript -->
<script>
  // Mobile Menu Toggle
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const navContainer = document.querySelector('.nav-container');

  mobileMenuBtn.addEventListener('click', () => {
    navContainer.classList.toggle('active');

    // Toggle icon between bars and times
    const icon = mobileMenuBtn.querySelector('i');
    if (icon.classList.contains('fa-bars')) {
      icon.classList.remove('fa-bars');
      icon.classList.add('fa-times');
    } else {
      icon.classList.remove('fa-times');
      icon.classList.add('fa-bars');
    }
  });

  // Mobile Dropdown Toggle
  if (window.innerWidth <= 768) {
    const dropdownToggles = document.querySelectorAll('.dropdown-toggle');

    dropdownToggles.forEach(toggle => {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        const dropdownMenu = toggle.nextElementSibling;
        dropdownMenu.classList.toggle('active');

        const icon = toggle.querySelector('.dropdown-arrow');
        if (icon.style.transform === 'rotate(180deg)') {
          icon.style.transform = 'rotate(0deg)';
        } else {
          icon.style.transform = 'rotate(180deg)';
        }
      });
    });
  }

  // Animated Trucks Background
  const canvas = document.getElementById('animationCanvas');
  const ctx = canvas.getContext('2d');

  // Set canvas size to match window
  function resizeCanvas() {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  }

  resizeCanvas();
  window.addEventListener('resize', resizeCanvas);

  // Truck class
  class Truck {
    constructor() {
      this.width = 100;
      this.height = 50;
      this.x = Math.random() * canvas.width;
      this.y = Math.random() * canvas.height;
      this.speed = 0.3 + Math.random() * 0.7; // Slower speed
      this.direction = Math.random() * Math.PI * 2; // Random direction in radians
      this.color = Math.random() > 0.5 ? '#F39720' : '#FDB614';
    }

    update() {
      // Move truck
      this.x += Math.cos(this.direction) * this.speed;
      this.y += Math.sin(this.direction) * this.speed;

      // Bounce off edges
      if (this.x < 0 || this.x > canvas.width - this.width) {
        this.direction = Math.PI - this.direction;
      }

      if (this.y < 0 || this.y > canvas.height - this.height) {
        this.direction = -this.direction;
      }
    }

    draw() {
      ctx.save();
      ctx.translate(this.x, this.y);
      ctx.rotate(this.direction);

      // Draw truck body
      ctx.fillStyle = this.color;
      ctx.fillRect(-this.width / 2, -this.height / 2, this.width * 0.7, this.height);

      // Draw truck cabin
      ctx.fillStyle = this.color === '#F39720' ? '#FDB614' : '#F39720';
      ctx.fillRect(-this.width / 2 + this.width * 0.7, -this.height / 2, this.width * 0.3, this.height * 0.8);

      // Draw wheels
      ctx.fillStyle = '#333';
      ctx.beginPath();
      ctx.arc(-this.width / 2 + this.width * 0.2, this.height / 2, this.height * 0.2, 0, Math.PI * 2);
      ctx.fill();

      ctx.beginPath();
      ctx.arc(-this.width / 2 + this.width * 0.8, this.height / 2, this.height * 0.2, 0, Math.PI * 2);
      ctx.fill();

      ctx.restore();
    }
  }

  // Create only 2 trucks for better performance
  const trucks = [];
  for (let i = 0; i < 2; i++) {
    trucks.push(new Truck());
  }

  // Animation loop
  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    trucks.forEach(truck => {
      truck.update();
      truck.draw();
    });

    requestAnimationFrame(animate);
  }

  animate();

  // Testimonial Slider
  const dots = document.querySelectorAll('.testimonial-dot');
  const testimonials = [{
      content: "The ShipFast app has completely transformed how we manage our shipments. The real-time tracking feature gives us complete visibility of our packages, and the instant notifications keep us informed every step of the way. It's incredibly user-friendly and has saved us countless hours.",
      author: "Sarah Johnson",
      position: "E-commerce Manager, TechStore",
      image: "/placeholder.svg?height=100&width=100"
    },
    {
      content: "As a small business owner, I need to keep track of all my shipments without spending hours on the phone. The ShipFast app makes it easy to book, track, and manage all my deliveries in one place. The price calculator is especially helpful for budgeting.",
      author: "Michael Chen",
      position: "Owner, Artisan Crafts",
      image: "/placeholder.svg?height=100&width=100"
    },
    {
      content: "I've tried many shipping apps, but ShipFast is by far the most intuitive and feature-rich. The ability to get instant quotes and compare different shipping options has saved our company thousands of dollars. The digital proof of delivery feature is also a game-changer.",
      author: "Jessica Martinez",
      position: "Logistics Manager, Global Imports",
      image: "/placeholder.svg?height=100&width=100"
    }
  ];

  const testimonialContent = document.querySelector('.testimonial-content');
  const authorName = document.querySelector('.author-name');
  const authorPosition = document.querySelector('.author-position');
  const authorImage = document.querySelector('.author-image img');

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      // Remove active class from all dots
      dots.forEach(d => d.classList.remove('active'));

      // Add active class to clicked dot
      dot.classList.add('active');

      // Update testimonial content
      if (index < testimonials.length) {
        testimonialContent.textContent = testimonials[index].content;
        authorName.textContent = testimonials[index].author;
        authorPosition.textContent = testimonials[index].position;
        authorImage.src = testimonials[index].image;
      }

      // Add fade animation
      testimonialContent.style.opacity = 0;
      setTimeout(() => {
        testimonialContent.style.opacity = 1;
      }, 300);
    });
  });

  // Auto rotate testimonials every 5 seconds
  let currentTestimonial = 0;
  setInterval(() => {
    currentTestimonial = (currentTestimonial + 1) % testimonials.length;
    dots[currentTestimonial].click();
  }, 5000);

  // Screenshots Slider
  const screenshotDots = document.querySelectorAll('.screenshot-dot');
  const screenshotsContainer = document.querySelector('.screenshots-container');
  const screenshotItems = document.querySelectorAll('.screenshot-item');

  screenshotDots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      // Remove active class from all dots
      screenshotDots.forEach(d => d.classList.remove('active'));

      // Add active class to clicked dot
      dot.classList.add('active');

      // Scroll to the corresponding screenshot
      if (screenshotItems[index]) {
        screenshotItems[index].scrollIntoView({
          behavior: 'smooth',
          block: 'nearest',
          inline: 'center'
        });
      }
    });
  });

  // Update active dot based on visible screenshot
  const observerOptions = {
    root: screenshotsContainer,
    rootMargin: '0px',
    threshold: 0.7
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const index = Array.from(screenshotItems).indexOf(entry.target);
        if (index >= 0 && screenshotDots[index]) {
          screenshotDots.forEach(d => d.classList.remove('active'));
          screenshotDots[index].classList.add('active');
        }
      }
    });
  }, observerOptions);

  screenshotItems.forEach(item => {
    observer.observe(item);
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();

      const targetId = this.getAttribute('href');
      if (targetId === '#') return;

      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        window.scrollTo({
          top: targetElement.offsetTop - 100,
          behavior: 'smooth'
        });
      }
    });
  });
</script>
