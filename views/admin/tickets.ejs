<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Initialize feather icons
    feather.replace();

    // Filter chips
    const filterChips = document.querySelectorAll('.filter-chip');
    filterChips.forEach(chip => {
      chip.addEventListener('click', function() {
        // If already active and it's not the "All" chip, toggle it off
        if (this.classList.contains('active') && this.textContent.trim() !== 'All') {
          this.classList.remove('active');
          document.querySelector('.filter-chip:first-child').classList.add('active');
        } else {
          // If clicking on "All", deactivate all other chips
          if (this.textContent.trim() === 'All') {
            filterChips.forEach(c => c.classList.remove('active'));
          } else {
            // If clicking on any other chip, deactivate "All"
            document.querySelector('.filter-chip:first-child').classList.remove('active');
          }
          this.classList.add('active');
        }

        // Here you would typically filter the tickets based on the selected chips
        const activeFilters = Array.from(document.querySelectorAll('.filter-chip.active'))
          .map(chip => chip.textContent.trim());

        console.log('Active filters:', activeFilters);
      });
    });

    // Ticket list items
    const ticketItems = document.querySelectorAll('.ticket-list-item');
    ticketItems.forEach(item => {
      item.addEventListener('click', function() {
        // Remove active class from all items
        ticketItems.forEach(i => i.classList.remove('active'));
        // Add active class to clicked item
        this.classList.add('active');

        // Here you would typically load the ticket details and chat
        const ticketTitle = this.querySelector('h6').textContent;
        console.log('Selected ticket:', ticketTitle);

        // For demo purposes, show a loading indicator
        const chatMessages = document.querySelector('.chat-messages');
        if (chatMessages) {
          chatMessages.innerHTML = '<div class="d-flex justify-content-center p-5"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div></div>';

          // Simulate loading delay
          setTimeout(() => {
            // This would be replaced with actual data loading
            Swal.fire({
              title: 'Ticket Loaded',
              text: `Now viewing: ${ticketTitle}`,
              icon: 'success',
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true
            });
          }, 1000);
        }
      });
    });

    // Auto-scroll chat to bottom
    const chatMessages = document.querySelector('.chat-messages');
    if (chatMessages) {
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    // Canned responses
    const cannedResponses = document.querySelectorAll('.canned-response-item');
    cannedResponses.forEach(response => {
      response.addEventListener('click', function() {
        const responseTitle = this.querySelector('.canned-response-title').textContent;

        // For demo purposes, show a toast notification
        Swal.fire({
          title: 'Canned Response',
          text: `Using response: ${responseTitle}`,
          icon: 'info',
          toast: true,
          position: 'top-end',
          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true
        });

        // Here you would typically insert the canned response into the message input
        const messageInput = document.querySelector('.chat-input textarea');
        if (messageInput) {
          // This is just a demo response, in a real app you'd fetch the actual content
          let responseText = '';

          if (responseTitle === 'Delivery Issue - Initial Response') {
            responseText = "I'm sorry to hear about the issue with your delivery. Let me look into this right away and get back to you with more information. Could you please confirm your complete address and any landmarks that might help the delivery person locate your place?";
          } else if (responseTitle === 'Redelivery Confirmation') {
            responseText = "Good news! We've arranged for a redelivery of your order. The delivery person will attempt delivery within the next [timeframe]. They'll call you before arriving. Please let me know if you have any questions.";
          } else if (responseTitle === 'Request for More Information') {
            responseText = "To better assist you with this issue, could you please provide the following information: 1) Your complete delivery address, 2) Any landmarks near your location, 3) A phone number where the delivery person can reach you. This will help us resolve your issue more quickly.";
          } else if (responseTitle === 'Refund Process Explanation') {
            responseText = "I understand you'd like a refund for your order. Here's how the refund process works: Once approved, refunds typically take 5-7 business days to appear in your account, depending on your payment method. Would you like me to initiate the refund process for you?";
          } else if (responseTitle === 'Issue Resolution & Follow-up') {
            responseText = "I'm glad we were able to resolve your issue. Your satisfaction is our priority. Is there anything else you need help with? If not, please don't hesitate to contact us if you have any questions in the future.";
          }

          messageInput.value = responseText;
          messageInput.focus();
        }
      });
    });

    // Submit message on Enter (unless Shift is pressed)
    const messageInput = document.querySelector('.chat-input textarea');
    if (messageInput) {
      messageInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
          e.preventDefault();
          const messageText = this.value.trim();
          if (messageText) {
            // Here you would send the message to the server
            console.log('Sending message:', messageText);

            // For demo purposes, add the message to the chat
            const chatMessages = document.querySelector('.chat-messages');
            const newMessage = document.createElement('div');
            newMessage.className = 'message outgoing';
            newMessage.innerHTML = `
              <div class="message-content">
                <p class="mb-0">${messageText}</p>
                <div class="message-time">Just now</div>
              </div>
              <div class="message-avatar">
                <img src="/assets/images/users/avatar-3.jpg" alt="Support">
              </div>
            `;
            chatMessages.appendChild(newMessage);
            chatMessages.scrollTop = chatMessages.scrollHeight;

            // Clear the input
            this.value = '';

            // Simulate a customer response after a delay
            setTimeout(() => {
              const responseMessage = document.createElement('div');
              responseMessage.className = 'message incoming';
              responseMessage.innerHTML = `
                <div class="message-avatar">
                  <img src="/assets/images/users/avatar-1.jpg" alt="Customer">
