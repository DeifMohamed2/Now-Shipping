<%- contentFor('HeaderCss') %>
<link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/assets/rCSS/tickets-new.css">

<%- contentFor('body') %>
<div>
  <div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <div>
            <h3 class="fw-bold mb-1" style="color: #2A3950;">
              <i class="ri-customer-service-2-line me-2" style="color: #fdb614;"></i>Support Tickets
            </h3>
            <p class="text-muted mb-0">Manage and respond to customer support tickets efficiently</p>
          </div>
          <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" id="refreshBtn" title="Refresh">
              <i class="ri-refresh-line"></i>
            </button>
            <button class="btn btn-primary" id="exportBtn" title="Export Tickets">
              <i class="ri-download-line me-1"></i> Export
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Stats Cards -->
    <div class="row mb-4">
      <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stats-card h-100" style="border-left: 4px solid #fdb614;">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
              <div class="flex-grow-1">
                <p class="text-muted mb-1 small fw-semibold text-uppercase">Total Tickets</p>
                <h3 class="mb-0 fw-bold" id="totalTickets" style="color: #2A3950;">0</h3>
                <small class="text-muted" id="totalTicketsChange"></small>
              </div>
              <div class="flex-shrink-0">
                <div class="stats-icon" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
                  <i class="ri-ticket-2-line"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stats-card h-100" style="border-left: 4px solid #28a745;">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
              <div class="flex-grow-1">
                <p class="text-muted mb-1 small fw-semibold text-uppercase">New Tickets</p>
                <h3 class="mb-0 fw-bold" id="newTickets" style="color: #28a745;">0</h3>
                <small class="text-muted" id="newTicketsChange"></small>
              </div>
              <div class="flex-shrink-0">
                <div class="stats-icon" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                  <i class="ri-notification-badge-line"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stats-card h-100" style="border-left: 4px solid #17a2b8;">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
              <div class="flex-grow-1">
                <p class="text-muted mb-1 small fw-semibold text-uppercase">Open Tickets</p>
                <h3 class="mb-0 fw-bold" id="openTickets" style="color: #17a2b8;">0</h3>
                <small class="text-muted" id="openTicketsChange"></small>
              </div>
              <div class="flex-shrink-0">
                <div class="stats-icon" style="background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);">
                  <i class="ri-mail-open-line"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6 mb-3">
        <div class="card stats-card h-100" style="border-left: 4px solid #6c757d;">
          <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
              <div class="flex-grow-1">
                <p class="text-muted mb-1 small fw-semibold text-uppercase">Resolved</p>
                <h3 class="mb-0 fw-bold" id="resolvedTickets" style="color: #6c757d;">0</h3>
                <small class="text-muted" id="resolvedTicketsChange"></small>
              </div>
              <div class="flex-shrink-0">
                <div class="stats-icon" style="background: linear-gradient(135deg, #6c757d 0%, #495057 100%);">
                  <i class="ri-checkbox-circle-line"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- Ticket List Sidebar -->
      <div class="col-lg-4">
        <div class="card shadow-lg border-0 h-100">
          <div class="card-header text-white border-0" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
            <div class="d-flex align-items-center justify-content-between">
              <h5 class="mb-0 fw-bold">
                <i class="ri-ticket-2-line me-2"></i>All Tickets
              </h5>
              <span class="badge bg-white text-dark" id="ticketCount">0</span>
            </div>
          </div>
          <div class="card-body p-0 d-flex flex-column" style="height: calc(100vh - 350px);">
            <!-- Enhanced Filters -->
            <div class="p-3 border-bottom bg-light">
              <div class="input-group mb-3">
                <span class="input-group-text bg-white border-end-0">
                  <i class="ri-search-line text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="searchTickets" placeholder="Search tickets...">
              </div>
              <div class="row g-2 mb-2">
                <div class="col-6">
                  <label class="form-label small fw-semibold mb-1">Priority</label>
                  <select class="form-select form-select-sm" id="filterPriority">
                    <option value="all">All Priorities</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="urgent">Urgent</option>
                  </select>
                </div>
                <div class="col-6">
                  <label class="form-label small fw-semibold mb-1">Type</label>
                  <select class="form-select form-select-sm" id="filterType">
                    <option value="all">All Types</option>
                    <option value="order_issue">Order Issue</option>
                    <option value="delivery_issue">Delivery Issue</option>
                    <option value="payment_issue">Payment Issue</option>
                    <option value="return_request">Return Request</option>
                    <option value="technical_support">Technical Support</option>
                    <option value="general_inquiry">General Inquiry</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>
            </div>
            <!-- Status Filter Tabs -->
            <div class="btn-group w-100 p-2 bg-light border-bottom" role="group">
              <button type="button" class="btn btn-sm btn-outline-primary active filter-tab" data-status="all">
                <i class="ri-list-check me-1"></i>All
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="new">
                <i class="ri-add-circle-line me-1"></i>New
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="open">
                <i class="ri-mail-open-line me-1"></i>Open
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="pending">
                <i class="ri-time-line me-1"></i>Pending
              </button>
              <button type="button" class="btn btn-sm btn-outline-primary filter-tab" data-status="resolved">
                <i class="ri-check-line me-1"></i>Resolved
              </button>
            </div>
            <!-- Ticket List -->
            <div id="ticketList" class="flex-grow-1 overflow-auto" style="max-height: 100%;"></div>
          </div>
        </div>
      </div>

      <!-- Chat Container -->
      <div class="col-lg-8">
        <div class="card shadow-lg border-0 h-100" style="height: calc(100vh - 350px);">
          <!-- Empty State -->
          <div id="emptyState" class="h-100 d-flex flex-column align-items-center justify-content-center p-5">
            <div class="empty-state-icon mb-4">
              <i class="ri-message-3-line"></i>
            </div>
            <h4 class="fw-bold mb-2" style="color: #2A3950;">No Ticket Selected</h4>
            <p class="text-muted text-center">Select a ticket from the list to view and respond to messages</p>
          </div>

          <!-- Chat Container -->
          <div id="chatContainer" class="h-100 d-flex flex-column hidden">
            <!-- Enhanced Chat Header -->
            <div class="card-header border-0 text-white" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%);">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="flex-grow-1">
                  <h5 id="chatTitle" class="mb-2 fw-bold">Ticket #...</h5>
                  <div id="chatInfo" class="small"></div>
                </div>
                <div class="d-flex gap-2 align-items-start">
                  <select class="form-select form-select-sm" id="prioritySelect" style="width: auto; min-width: 120px;">
                    <option value="low">Low Priority</option>
                    <option value="medium" selected>Medium Priority</option>
                    <option value="high">High Priority</option>
                    <option value="urgent">Urgent</option>
                  </select>
                  <select class="form-select form-select-sm" id="statusSelect" style="width: auto; min-width: 140px;">
                    <option value="new">New</option>
                    <option value="open">Open</option>
                    <option value="pending">Pending</option>
                    <option value="in_progress">In Progress</option>
                    <option value="resolved">Resolved</option>
                    <option value="closed">Closed</option>
                  </select>
                  <div class="dropdown">
                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="ticketActions" data-bs-toggle="dropdown">
                      <i class="ri-more-2-line"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><a class="dropdown-item" href="#" id="assignTicketBtn"><i class="ri-user-add-line me-2"></i>Assign Ticket</a></li>
                      <li><a class="dropdown-item" href="#" id="viewTimelineBtn"><i class="ri-time-line me-2"></i>View Timeline</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <li><a class="dropdown-item text-danger" href="#" id="deleteTicketBtn"><i class="ri-delete-bin-line me-2"></i>Delete Ticket</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Messages Area -->
            <div id="chatMessages" class="flex-grow-1 overflow-auto p-4"></div>
            
            <!-- Message Input Area -->
            <div class="card-footer border-0 bg-white">
              <div id="attachmentPreview" class="mb-2"></div>
              <div class="input-group">
                <button class="btn btn-outline-secondary" type="button" id="attachImageBtn" title="Attach Image">
                  <i class="ri-image-add-line"></i>
                </button>
                <input type="file" id="imageInput" accept="image/*" style="display: none;">
                <textarea id="messageInput" class="form-control" placeholder="Type your message..." rows="2"></textarea>
                <button class="btn btn-primary px-4" id="sendBtn">
                  <i class="ri-send-plane-fill"></i> Send
                </button>
              </div>
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" id="internalNoteCheck">
                <label class="form-check-label small" for="internalNoteCheck">
                  <i class="ri-lock-line me-1"></i>Internal Note (not visible to customer)
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Assign Ticket Modal -->
<div class="modal fade" id="assignTicketModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%); color: white;">
        <h5 class="modal-title">Assign Ticket</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label class="form-label">Select Admin</label>
          <select class="form-select" id="assignToSelect">
            <option value="">Unassign</option>
            <!-- Will be populated dynamically -->
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmAssignBtn">Assign</button>
      </div>
    </div>
  </div>
</div>

<!-- Ticket Timeline Modal -->
<div class="modal fade" id="timelineModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="background: linear-gradient(135deg, #fdb614 0%, #f39720 100%); color: white;">
        <h5 class="modal-title">Ticket Timeline</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div id="timelineContent">
          <!-- Timeline will be populated dynamically -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
<script src="/assets/libs/sweetalert2/sweetalert2.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/assets/rJS/tickets-admin.js"></script>