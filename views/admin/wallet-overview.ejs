<!-- Custom scripts -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Initialize flatpickr date range picker
    flatpickr("#datepicker-range", {
      mode: "range",
      dateFormat: "d M, Y",
    });
    
    // Initialize choices for select dropdowns
    const selectElements = document.querySelectorAll('[data-choices]');
    selectElements.forEach(element => {
      const choices = new Choices(element, {
        searchEnabled: element.getAttribute('data-choices-search-false') !== 'true',
        itemSelectText: '',
      });
    });
    
    // Counter animation for stats
    const counterElements = document.querySelectorAll('.counter-value');
    counterElements.forEach(element => {
      const target = parseFloat(element.getAttribute('data-target'));
      let count = 0;
      const duration = 2000; // 2 seconds
      const increment = target / (duration / 16); // 60fps
      
      const updateCount = () => {
        count += increment;
        if (count < target) {
          element.textContent = count < 1000 ? Math.floor(count) : Math.floor(count).toLocaleString();
          requestAnimationFrame(updateCount);
        } else {
          element.textContent = target < 1000 ? target : target.toLocaleString();
        }
      };
      
      updateCount();
    });
    
    // Initialize list.js for table
    const options = {
      valueNames: [
        'order_id',
        'customer',
        'order_date',
        'amount',
        'status',
        'delivery_person',
        'deposit_status',
      ],
      page: 10,
      pagination: true,
      plugins: [
        ListPagination({})
      ]
    };
    
    // Initialize the list
    new List('orderList', options);
    
    // Initialize feather icons
    feather.replace();
    
    // Handle deposit money button clicks
    const depositButtons = document.querySelectorAll('.btn-deposit:not(.deposited):not([disabled])');
    depositButtons.forEach(button => {
      button.addEventListener('click', function() {
        const orderId = this.getAttribute('data-order-id');
        const row = this.closest('tr');
        const amount = row.querySelector('td:nth-child(5)').textContent;
        
        // Set values in modal
        document.getElementById('depositOrderId').textContent = orderId;
        document.getElementById('depositAmount').value = amount.replace('$', '');
        
        // Show modal
        const depositModal = new bootstrap.Modal(document.getElementById('depositMoneyModal'));
        depositModal.show();
      });
    });
    
    // Handle confirm deposit button click
