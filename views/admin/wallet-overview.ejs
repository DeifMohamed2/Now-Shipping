          // Update deposit status
          button.textContent = 'Deposited';
          button.classList.add('deposited');
          button.disabled = true;
          
          // Update status cell
          const statusCell = row.querySelector('td:nth-child(8)');
          statusCell.innerHTML = '<span class="money-info collected"><i class="ri-checkbox-circle-line"></i> Deposited</span>';
          
          // Show success message
          Swal.fire({
            title: 'Success!',
            text: `Money for order ${orderId} has been successfully deposited.`,
            icon: 'success',
            confirmButtonText: 'OK'
          });
          
          // Update stats (for demo purposes)
          const pendingDepositsElement = document.querySelector('.counter-value[data-target="42580"]');
          const newPendingValue = parseInt(pendingDepositsElement.getAttribute('data-target')) - 2000;
          pendingDepositsElement.setAttribute('data-target', newPendingValue);
          pendingDepositsElement.textContent = newPendingValue.toLocaleString();
          
          // Log the action (in a real app, this would be an API call)
          console.log(`Deposit recorded for order ${orderId} with notes: ${notes}`);
        }
      }, 1500);
    });
